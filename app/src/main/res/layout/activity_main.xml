<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Calculate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="@android:dimen/thumbnail_height"
    android:minHeight="@android:dimen/notification_large_icon_height"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText"
        android:layout_width="130dp"
        android:layout_height="66dp"
        android:hint="hint"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="261dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="138dp"
        android:layout_height="68dp"
        android:gravity="center"
        android:text="Independent Variable"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="259dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="400dp"
        android:layout_height="163dp"
        android:gravity="center"
        android:lineSpacingExtra="14sp"
        android:text="Answer"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        android:textStyle="italic"
        android:visibility="visible"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="519dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="400dp"
        android:layout_height="163dp"
        android:gravity="center"
        android:lineSpacingExtra="14sp"
        android:text="1st Order Homogeneous ODE Calculator"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="73dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="51dp"
        android:layout_height="62dp"
        android:gravity="center_vertical"
        android:text="= 0"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="344dp"
        tools:layout_editor_absoluteY="367dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="24dp"
        android:layout_height="62dp"
        android:gravity="center_vertical"
        android:text="y"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="320dp"
        tools:layout_editor_absoluteY="366dp" />

    <Button
        android:id="@+id/toCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Calculate"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="444dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="130dp"
        android:layout_height="62dp"
        android:hint="hint"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="367dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText2"
        android:layout_width="116dp"
        android:layout_height="62dp"
        android:hint="hint"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="367dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="64dp"
        android:layout_height="62dp"
        android:gravity="center_vertical"
        android:text="y' +"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="366dp" />

</androidx.constraintlayout.widget.ConstraintLayout>